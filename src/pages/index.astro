---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import CommandLine from "../components/commandLine.astro";
import Help from "../components/help.astro";
---

<Layout title="Welcome to your startpage.">
  <div class="content">
    <Card />
    <CommandLine />
    <Help />
  </div>
</Layout>

<style>
  body {
    background: linear-gradient(135deg, rgba(85, 107, 47, 0.95) 0%, rgba(50, 65, 25, 0.95) 100%);
    color: #f5f5f5;
    min-height: 100vh;
    position: relative;
  }

  body::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle at 50% 50%, rgba(175, 200, 125, 0.1) 0%, transparent 100%);
    opacity: 0.15;
    z-index: -1;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 30px;
    padding: 2rem;
  }

  /* Existing responsive styles */
  @media only screen and (max-width: 1200px) {
    .content {
      margin-top: 2em;
      gap: 30px;
    }
  }
</style>