---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import CommandLine from "../components/commandLine.astro";
import Help from "../components/help.astro";
---

<Layout title="Welcome to your startpage.">
  <div class="content">
    <Card />
    <CommandLine />
    <Help />
  </div>
</Layout>

<style>
  /* Base styles */

  html, body {
    overflow: hidden; /* Disable scrollbars */
  }

  body {
    background: linear-gradient(
      150deg,
      #D9E2FF 0%,
      #D9E2FF 100%
    );
    color: #FFFFFF;
    min-height: 100vh;
    font-family: system-ui, sans-serif;
    position: relative;
  }

  /* Water-like texture overlay */
  body::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 70% 20%, 
        rgba(255,255,255,0.08) 0%, 
        transparent 30%),
      repeating-linear-gradient(
        -45deg,
        rgba(255,255,255,0.05) 0px 1px,
        transparent 1px 40px
      );
    pointer-events: none;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .content {
      padding: 1.5rem;
      gap: 1.5rem;
    }
    
    .card {
      padding: 1.5rem;
      backdrop-filter: blur(4px);
    }
    
    .command-line {
      padding: 0.75rem;
    }
  }

</style>