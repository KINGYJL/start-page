---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import CommandLine from "../components/commandLine.astro";
import Help from "../components/help.astro";
---

<Layout title="Welcome to your startpage.">
  <div class="content">
    <div class="cards">
      <Card title="Your Common Title Here" /> <!-- Pass the title as a prop -->
    </div>
    <CommandLine />
    <Help />
  </div>
</Layout>

<style>
  .cards {
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 100%;
    align-items: center;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 160px;
  }

  @media only screen and (max-width: 1200px) {
    .content {
      margin-top: 2em;
      gap: 100px;
    }
    .cards {
      align-items: center;
      flex-direction: column;
      gap: 20px;
      width: auto;
    }
  }
</style>

