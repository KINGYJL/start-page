---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import CommandLine from "../components/commandLine.astro";
import Help from "../components/help.astro";
---

<Layout title="Welcome to your startpage.">
  <div class="content">
    <Card />
    <CommandLine />
    <Help />
  </div>
</Layout>

<style>
  /* Base styles */
  body {
    background: linear-gradient(
      150deg,
      #006875 0%,
      #D9E2FF 100%
    );
    color: #FFFFFF;
    min-height: 100vh;
    font-family: system-ui, sans-serif;
    position: relative;
  }

  /* Water-like texture overlay */
  body::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 70% 20%, 
        rgba(255,255,255,0.08) 0%, 
        transparent 30%),
      repeating-linear-gradient(
        -45deg,
        rgba(255,255,255,0.05) 0px 1px,
        transparent 1px 40px
      );
    pointer-events: none;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  /* Component styling */
  .card {
    background: rgba(0, 104, 117, 0.25);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255,255,255,0.15);
    border-radius: 12px;
    padding: 2rem;
    width: min(90vw, 600px);
    box-shadow: 0 8px 32px rgba(0,0,0,0.15);
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-2px);
    border-color: rgba(255,255,255,0.3);
  }

  .command-line {
    background: rgba(255,255,255,0.9);
    color: #006875;
    border-radius: 8px;
    padding: 1rem 1.5rem;
    width: min(80vw, 500px);
    border: 2px solid #006875;
  }

  .help-section {
    color: rgba(255,255,255,0.9);
    text-align: center;
  }

  .help-section a {
    color: #FFFFFF;
    text-decoration: none;
    border-bottom: 1px solid rgba(255,255,255,0.3);
    transition: border-color 0.2s ease;
  }

  .help-section a:hover {
    border-color: #FFFFFF;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .content {
      padding: 1.5rem;
      gap: 1.5rem;
    }
    
    .card {
      padding: 1.5rem;
      backdrop-filter: blur(4px);
    }
    
    .command-line {
      padding: 0.75rem;
    }
  }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
    background: #004953;
  }

  ::-webkit-scrollbar-thumb {
    background: #006875;
    border-radius: 4px;
  }
</style>