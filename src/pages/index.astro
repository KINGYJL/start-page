---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import CommandLine from "../components/commandLine.astro";
import Help from "../components/help.astro";
---

<Layout title="Welcome to your startpage.">
  <div class="content">
    <Card />
    <CommandLine />
    <Help />
  </div>

  <script>
    const accents = ["#6E9B96", "#488B65", "#73B6C5"];
    document.documentElement.style.setProperty(
      "--accent",
      accents[Math.floor(Math.random() * accents.length)],
    );
  </script>
</Layout>

<style>
  /* Base styles */
  body {
    background: linear-gradient(145deg, #023b33 0%, #2b4538 100%);
    color: #c3d2b3;
    min-height: 100vh;
    position: relative;
    font-family: system-ui, sans-serif;
  }

  /* Background texture */
  body::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        circle at 50% 40%,
        #73b6c510 0%,
        transparent 50%
      ),
      repeating-linear-gradient(-45deg, #488b6510 0px 2px, transparent 2px 20px);
    z-index: -1;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    min-height: 100vh;
  }

  /* Component styling */
  .card {
    background: #2b453880;
    backdrop-filter: blur(8px);
    border: 1px solid #6e9b9640;
    border-radius: 12px;
    padding: 2rem;
    width: min(90vw, 600px);
    box-shadow: 0 8px 32px #023b3340;
  }

  .command-line {
    background: #023b33;
    border: 1px solid #488b65;
    border-radius: 8px;
    padding: 1rem;
    width: min(80vw, 500px);
  }

  .help-section {
    color: #889fa5;
    text-align: center;
  }

  .help-section a {
    color: #73b6c5;
    text-decoration: none;
  }

  .help-section a:hover {
    color: #488b65;
    text-decoration: underline;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .content {
      padding: 1rem;
      gap: 1.5rem;
    }

    .card {
      padding: 1.5rem;
      backdrop-filter: none;
      background: #2b4538cc;
    }
  }

  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
    background: #023b33;
  }

  ::-webkit-scrollbar-thumb {
    background: #488b65;
    border-radius: 4px;
  }

  .card {
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 40px #023b3360;
  }
</style>
