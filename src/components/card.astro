---
const { links } = (await Astro.glob("../content/bookmarks.md"))[0].frontmatter;
---

<section class="bookmark-sections">
  <!-- Section 1 -->
  <div class="bookmark-section">
    <ul>
      {links.slice(0, 5).map((link) => ( <!-- First 5 bookmarks -->
        <li>
          <a href={link.href}>
            <img class="svg-icon" src={link.src} alt={link.alt} />
            <span>{link.title}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- Section 2 -->
  <div class="bookmark-section">
    <ul>
      {links.slice(5, 10).map((link) => ( <!-- Next 5 bookmarks -->
        <li>
          <a href={link.href}>
            <img class="svg-icon" src={link.src} alt={link.alt} />
            <span>{link.title}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- Section 3 -->
  <div class="bookmark-section">
    <ul>
      {links.slice(10, 15).map((link) => ( <!-- Next 5 bookmarks -->
        <li>
          <a href={link.href}>
            <img class="svg-icon" src={link.src} alt={link.alt} />
            <span>{link.title}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- Section 4 -->
  <div class="bookmark-section">
    <ul>
      {links.slice(15, 20).map((link) => ( <!-- Next 5 bookmarks -->
        <li>
          <a href={link.href}>
            <img class="svg-icon" src={link.src} alt={link.alt} />
            <span>{link.title}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- Section 5 -->
  <div class="bookmark-section">
    <ul>
      {links.slice(20).map((link) => ( <!-- Remaining bookmarks -->
        <li>
          <a href={link.href}>
            <img class="svg-icon" src={link.src} alt={link.alt} />
            <span>{link.title}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .bookmark-sections {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 20px; /* Space between sections */
    width: 100%;
    max-width: 1200px; /* Adjust as needed */
    padding: 20px;
    margin: 0 auto;
  }

  .bookmark-section {
    background-color: var(--card-background-color);
    border-radius: var(--border-radius);
    padding: 10px;
    flex: 1 1 calc(20% - 20px); /* 5 columns with gap */
    box-sizing: border-box;
  }

  ul {
    list-style-type: none;
    display: grid;
    grid-template-columns: 1fr; /* Single column per section */
    gap: 10px; /* Space between bookmarks */
    padding: 0;
  }

  ul li {
    font-size: 20px;
  }

  ul li a {
    color: var(--text-color);
    text-decoration: none;
    display: flex;
    flex-direction: row; /* Align icon and text horizontally */
    justify-content: flex-start;
    align-items: center;
    gap: 10px; /* Space between icon and text */
    padding: 15px;
    border-radius: var(--border-radius);
    background-color: var(--card-item-background-color);
    transition: background-color 0.3s ease;
  }

  ul li a:hover {
    background-color: var(--card-item-hover-background-color);
  }

  ul li a img {
    max-width: 24px;
    max-height: 24px;
  }

  ul li a span {
    white-space: nowrap; /* Prevent text from wrapping */
  }

  .svg-icon {
    filter: invert(0%);
  }

  @media (prefers-color-scheme: dark) {
    .svg-icon {
      filter: invert(100%);
    }
  }

  /* Responsive adjustments */
  @media only screen and (max-width: 1200px) {
    .bookmark-section {
      flex: 1 1 calc(33.33% - 20px); /* 3 columns on smaller screens */
    }
  }

  @media only screen and (max-width: 768px) {
    .bookmark-section {
      flex: 1 1 calc(50% - 20px); /* 2 columns on mobile */
    }
  }

  @media only screen and (max-width: 480px) {
    .bookmark-section {
      flex: 1 1 100%; /* 1 column on very small screens */
    }
  }
</style>