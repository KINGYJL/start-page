---
const { title, links } = (await Astro.glob("../content/bookmarks.md"))[0].frontmatter;
---

<section>
  <ul>
    {links.map((link) => (
      <li>
        <a href={link.href}>
          <img class="svg-icon" src={link.src} alt={link.alt} />
        </a>
      </li>
    ))}
  </ul>
</section>

<style>
  section {
    background-color: var(--card-background-color);
    border-radius: var(--border-radius);
    width: 100%;
    max-width: 1200px; /* Adjust as needed */
    padding: 20px;
    margin: 0 auto;
  }

  h2 {
    font-weight: bold;
    font-size: 25px;
    text-align: center;
    margin-bottom: 20px;
  }

  ul {
    list-style-type: none;
    display: grid;
    grid-template-columns: repeat(5, 1fr); /* 5 bookmarks per row */
    gap: 20px;
    padding: 0;
  }

  ul li {
    font-size: 20px;
  }

  ul li a {
    color: var(--text-color);
    text-decoration: none;
    display: flex;
    flex-direction: row; /* Align icon and text horizontally */
    justify-content: flex-start;
    align-items: center;
    gap: 10px;
    padding: 15px;
    border-radius: var(--border-radius);
    background-color: var(--card-item-background-color);
    transition: background-color 0.3s ease;
  }

  ul li a:hover {
    background-color: var(--card-item-hover-background-color);
  }

  ul li a img {
    max-width: 24px;
    max-height: 24px;
  }

  ul li a span {
    white-space: nowrap; /* Prevent text from wrapping */
  }

  .svg-icon {
    filter: invert(0%);
  }

  @media (prefers-color-scheme: dark) {
    .svg-icon {
      filter: invert(100%);
    }
  }

  /* Responsive adjustments */
  @media only screen and (max-width: 1200px) {
    ul {
      grid-template-columns: repeat(3, 1fr); /* 3 bookmarks per row on smaller screens */
    }
  }

  @media only screen and (max-width: 768px) {
    ul {
      grid-template-columns: repeat(2, 1fr); /* 2 bookmarks per row on mobile */
    }
  }

  @media only screen and (max-width: 480px) {
    ul {
      grid-template-columns: repeat(1, 1fr); /* 1 bookmark per row on very small screens */
    }
  }
</style>