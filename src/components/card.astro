---
const { title, links } = (await Astro.glob("../content/bookmarks.md"))[0].frontmatter;
---

<section>
  <h2>{title}</h2> <!-- Optional: You can remove this if you don't want any title -->
  <ul>
    {links.map((link) => (
      <li>
        <a href={link.href}>
          <img class="svg-icon" src={link.src} alt={link.alt} />
          {link.title}
        </a>
      </li>
    ))}
  </ul>
</section>

<style>
  section {
    background-color: var(--card-background-color);
    border-radius: var(--border-radius);
    width: 100%;
    max-width: 800px; /* Adjust as needed */
    padding: 20px;
    margin: 0 auto;
  }

  h2 {
    font-weight: bold;
    font-size: 25px;
    text-align: center;
    margin-bottom: 20px;
  }

  ul {
    list-style-type: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    padding: 0;
  }

  ul li {
    font-size: 20px;
  }

  ul li a {
    color: var(--text-color);
    text-decoration: none;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    gap: 10px;
    padding: 10px;
    border-radius: var(--border-radius);
    background-color: var(--card-item-background-color);
    transition: background-color 0.3s ease;
  }

  ul li a:hover {
    background-color: var(--card-item-hover-background-color);
  }

  ul li a img {
    max-width: 24px;
    max-height: 24px;
  }

  .svg-icon {
    filter: invert(0%);
  }

  @media (prefers-color-scheme: dark) {
    .svg-icon {
      filter: invert(100%);
    }
  }
</style>